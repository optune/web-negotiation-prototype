{
  "name": "meteor-negotiation-prototype",
  "private": true,
  "version": "0.0.3",
  "scripts": {
    "start": "meteor run --settings settings.json",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy": "npm version patch && DEPLOY_HOSTNAME=eu-west-1.galaxy.meteor.com meteor deploy negotiation.optune.me --settings settings.json",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "env": {
      "shared-node-browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:react/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "max-lines": "error",
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0
    }
  },
  "dependencies": {
    "@optune/react-base-components": "github:optune/react-base-components#v2.0.1",
    "babel-runtime": "^6.18.0",
    "layer-ui-web": "^0.9.4",
    "layer-websdk": "^3.0.0",
    "meteor-node-stubs": "~0.2.0",
    "mgp": "^1.3.0",
    "react": "^15.4.1",
    "react-addons-pure-render-mixin": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/react-storybook-decorator-centered": "^1.0.0",
    "@kadira/storybook": "^2.33.0",
    "autoprefixer": "^6.5.3",
    "babel-eslint": "^7.1.1",
    "css-loader": "^0.26.0",
    "eslint": "^3.11.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.7.1",
    "node-sass": "^3.13.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1"
  }
}
